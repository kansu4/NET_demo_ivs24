@{
    ViewData["Title"] = "Home Page";
}

<!-- Home Page Content -->
<div class="text-center">
    <h2>Welcome to the Home Page</h2>

    <!-- Button to navigate to the Items Index page -->
    <a asp-controller="Items" asp-action="Index" class="btn btn-primary">Buy ingredient</a>

    <!-- Embedded YouTube Video -->
    <div class="mt-4">
        <h3>New recipe from the chef</h3>
        <iframe 
            width="560" 
            height="315" 
            src="https://www.youtube.com/embed/gLMcUa2C9Do"  
            title="YouTube video player" 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
        </iframe>
    </div>
</div>
